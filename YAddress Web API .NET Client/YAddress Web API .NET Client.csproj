<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>YAddressWebApiClient</PackageId>
    <Authors>YAddress.net</Authors>
    <Company>YAddress.net</Company>
    <Product>YAddress.net</Product>
    <Description>.NET client for YAddress Web API: postal address correction, validation, standardization and geocoding.</Description>
    <RepositoryUrl>https://github.com/YAddress/YAddressWebApiClient</RepositoryUrl>
    <PackageProjectUrl>https://github.com/YAddress/YAddressWebApiClient</PackageProjectUrl>
    <Version>1.5.0</Version>
    <Copyright>(C) 2022 YAddress.net</Copyright>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <RepositoryType>Git</RepositoryType>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="README.md" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
